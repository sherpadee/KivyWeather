#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


WeatherRoot:

# BEGIN WEATHER_ROOT
<WeatherRoot>:
    carousel: carousel
    locations: locations
    current_weather: current_weather
    forecast: forecast
    BoxLayout:
        orientation: "vertical"
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: "Kivy Weather"
                    with_previous: False
                    app_icon: 'data/icons/logo-icon.png'
                    app_icon_height: 35
                    app_icon_width: 35
                    on_press: app.root.show_about_form()
                ActionOverflow:    
                ActionButton:
                    text: "Locations"
                    #icon: 'data/icons/locations-icon.png'
                    #icon_height: 18
                    #icon_width: 18
                    on_press: app.root.carousel.load_slide(app.root.locations)
                ActionButton:
                    text: "Current"
                    on_press: app.root.carousel.load_slide(app.root.current_weather)
                ActionButton:
                    text: "Forecast"
                    on_press: app.root.carousel.load_slide(app.root.forecast)    
                ActionGroup: 
                    text: "•"
                    ActionButton:
                        text: "Settings"
                        on_press: app.open_settings()    
        Carousel:
            id: carousel
            Locations:
                id: locations
            CurrentWeather:
                id: current_weather
            Forecast:
                id: forecast    
# END WEATHER_ROOT

<AddLocationForm>:
    search_input: search_box
    search_results: search_results_list
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            height: "40dp"
            size_hint_y: None
            TextInput:
                id: search_box
                size_hint_x: 50
                focus: True
                multiline: False
                on_text_validate: root.search_location()
            Button:
                text: "Search"
                size_hint_x: 25
                on_press: root.search_location()
            Button:
                text: "Current Location"
                size_hint_x: 25
        ListView:
            id: search_results_list
            adapter:
                ListAdapter(
                data=[],
                cls=main.LocationButton,
                args_converter=main.locations_args_converter)
        Button:
            height: "40dp"
            size_hint_y: None
            text: "Cancel"
            on_press: root.dismiss()

<Locations@BoxLayout>:
    orientation: "vertical"
    locations_list: locations_list
    ListView:
        id: locations_list
        adapter:
            ListAdapter(
            data=[],
            cls=main.LocationButton,
            args_converter=main.locations_args_converter)
    ActionBar:
        pos_hint: {'bottom':1}
        ActionView:
            use_separator: True
            Hidden_ActionPrevious:
            ActionButton:
                text: "+ Add Location"
                on_press: app.root.show_add_location_form()

<Hidden_ActionPrevious@ActionPrevious>:
    with_previous: False
    on_press: print(self) ## method that will not be called easily
    title: '' ## Try placing text here, only a few pixels should show
    size_hint: None, None
    size: 0, 0

<CurrentWeather>:
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "{} ({})".format(root.location[0], root.location[1])
            font_size: "28dp"
        Label:
            text: "{}°".format(root.temp)
            font_size: "50dp"
        Label:
            text: root.conditions
            color: 1,1,1,1
            font_size: "18dp"
            bold: 1       
        AsyncImage:
            source: root.conditions_image    
            allow_stretch: 1
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Low: {}°".format(root.temp_min)
            color: 0,0.5,1,1
            font_size: "20dp"
            bold: 1
        Label:
            text: "High: {}°".format(root.temp_max)
            color: 1,0,0,1
            font_size: "20dp"
            bold: 1
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Pressure: {}hPa".format(root.pressure)
            color: 1,1,1,1
            font_size: "20dp"
            bold: 1
        Label:
            text: "Humidity: {}%".format(root.humidity)
            color: 1,1,1,1
            font_size: "20dp"
            bold: 1    
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Sunrise: {}".format(root.sunrise)
            color: 1,1,1,1
            font_size: "20dp"
            bold: 1
        Label:
            text: "Sunset: {}".format(root.sunset)
            color: 1,1,1,1
            font_size: "20dp"
            bold: 1    

<LocationButton>:
    text: "{} ({})".format(self.location[0], self.location[1])
    height: "80dp"
    size_hint_y: None
    #background_color: 0, .5, 0, 1
    font_size: "30dp"
    halign: "left"
    valign: "middle" 
    on_press: app.root.show_current_weather(self.location)

<ForecastLabel@BoxLayout>:
    date: ""
    conditions_image: ""
    conditions: ""
    temp_min: None
    temp_max: None
    pressure: None
    humidity: None
    wind_speed: None
    wind_directon: None
    canvas.before:
        Color:
            rgb: [0.2, 0.2, 0.2]
        Line:
            points: [self.pos[0], self.pos[1], self.width, self.pos[1]]
    Label:
        text: root.date
    BoxLayout:
        orientation: "vertical"
        AsyncImage:
            source: root.conditions_image
        Label:
            text: root.conditions
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Low: {}".format(root.temp_min)
        Label:
            text: "High: {}".format(root.temp_max)
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "P: {}".format(root.pressure)
        Label:
            text: "H: {}".format(root.humidity)
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "S: {}".format(root.wind_speed)
        Label:
            text: "D: {}".format(root.wind_directon)   

<Forecast>:
    forecast_container: forecast_container
    orientation: "vertical"
    Label:
        size_hint_y: 0.1
        font_size: "30dp"
        text: "{} ({})".format(root.location[0], root.location[1])
    BoxLayout:
        orientation: "vertical"
        id: forecast_container

<AddAboutForm>:
    close_button : close 
    BoxLayout:
        orientation: "vertical"
        canvas:
            Color:
                rgb: 0, 0.5, 0.5, 1
            Rectangle:
                size: self.size
        Label:
            font_size: "30dp"
            text: "About Kivy Weather"
        Image:
            source: 'data/icons/logo-icon.png'    
        Label:
            font_size: "20dp"
            text: "A Kivy Demo App\nVersion 1.0"
            color: 1,1,1,1
        Label:
            font_size: "20dp"
            text: "Dieter Föttinger\ndfoettinger@gmail.com"
            color: 1,1,1,1    
        Button:     
            id: close
            height: "40dp"
            size_hint_y: None
            text: "Ok"
            on_press: root.dismiss()